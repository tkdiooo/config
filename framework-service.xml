<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <property name="default_pattern" value="%d [%t] - [%X{traceNo}] %-5level [%C:%M] - %m%n"/>
    <property name="filepath" value="D:/opt/logs/framework/service"/><!-- 本地文件路径 -->
    <property name="brokerList" value="172.16.192.52:9092"/>
    <property name="zfcode" value="framework-service"/>
    <property name="fileName" value="info.log"/><!--远程文件 -->

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>${default_pattern}</pattern>
        </encoder>
    </appender>

    <!-- 同步到日志服务器，level>=ERROR -->
    <appender name="RMT" class="ch.qos.logback.core.ConsoleAppender">
        <encoding>UTF-8</encoding>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <!-- 小于level级别的日志会被过滤掉 -->
            <level>ERROR</level>
        </filter>
        <encoder class="com.sfsctech.logback.rmt.trace.encoder.TraceNoPatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>${default_pattern}</pattern>
            <synchToMDC>true</synchToMDC><!--是否开启远程同步//-->
            <zfcode>${zfcode}</zfcode><!--远程同步参数：项目编号//-->
            <brokerList>${brokerList}</brokerList><!--远程同步参数：zookeeper地址列表，可配置N个//-->
            <fileName>${fileName}</fileName><!--远程同步参数：同步过去的文件名称//-->
        </encoder>
    </appender>

    <!-- 异常日志，level>=INFO -->
    <appender name="EXCE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${filepath}/exception/log.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <!-- 小于level级别的日志会被过滤掉 -->
            <level>INFO</level>
        </filter>
        <encoder class="com.sfsctech.logback.rmt.trace.encoder.TraceNoPatternLayoutEncoder">
            <pattern>${default_pattern}</pattern>
            <synchToMDC>false</synchToMDC>
        </encoder>
    </appender>

    <!-- 系统日志，level>=INFO -->
    <appender name="INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${filepath}/information/log.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <!-- 小于INFO级别的日志会被过滤掉 -->
            <level>INFO</level>
        </filter>
        <encoder class="com.sfsctech.logback.rmt.trace.encoder.TraceNoPatternLayoutEncoder">
            <pattern>${default_pattern}</pattern>
            <synchToMDC>false</synchToMDC>
        </encoder>
    </appender>

    <!-- RPC日志，level>=WARN -->
    <appender name="WARN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${filepath}/dubbo/log.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <!-- 小于WARN级别的日志会被过滤掉 -->
            <level>WARN</level>
        </filter>
        <encoder class="com.sfsctech.logback.rmt.trace.encoder.TraceNoPatternLayoutEncoder">
            <pattern>${default_pattern}</pattern>
            <synchToMDC>false</synchToMDC>
        </encoder>
    </appender>

    <!-- SQL日志，level>=DEBUG -->
    <appender name="SQL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${filepath}/sql/log.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <!-- 小于DEBUG级别的日志会被过滤掉 -->
            <level>DEBUG</level>
        </filter>
        <encoder class="com.sfsctech.logback.rmt.trace.encoder.TraceNoPatternLayoutEncoder">
            <pattern>${default_pattern}</pattern>
            <synchToMDC>false</synchToMDC>
        </encoder>
    </appender>

    <!-- 异常日志输出至文件 -->
    <!--<logger name="logger.exception" level="INFO">
        <appender-ref ref="EXCE"/>
    </logger>
    &lt;!&ndash; RPC日志输出至文件 &ndash;&gt;
    <logger name="logger.dubbo" level="DEBUG">
        <appender-ref ref="RPC"/>
    </logger>-->
    <!-- 系统日志输出至文件 -->
    <logger name="com.sfsctech" level="INFO">
        <appender-ref ref="INFO"/>
    </logger>
    <!-- SQL日志输出至文件 -->
    <logger name="com.sfsctech.framework.mapper" level="DEBUG">
        <appender-ref ref="SQL"/>
    </logger>

    <!-- 控制台输出日志 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!--<appender-ref ref="RMT" />-->
    </root>

</configuration>